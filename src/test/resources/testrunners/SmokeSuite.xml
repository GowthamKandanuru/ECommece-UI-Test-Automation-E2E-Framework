<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="smoke" thread-count="4" parallel="tests">

    <listeners>
        <listener class-name="com.ui.opencart.listeners.AllureTestListener" />
    </listeners>

    <test name="Login Page Test">
       <!-- <parameter name="browser" value="chrome" />-->
        <classes>
            <class name="com.ui.opencart.tests.LoginPageTest" />
        </classes>
    </test>

    <test name="Account Page Test">
       <!-- <parameter name="browser" value="firefox" />-->
        <classes>
            <class name="com.ui.opencart.tests.AccountPageTest" />
        </classes>
    </test>

    <test name="Search Results Test">
       <!-- <parameter name="browser" value="chrome" />-->
        <classes>
            <class name="com.ui.opencart.tests.SearchResultsTest" />
        </classes>
    </test>

    <test name="Product Page Test">
       <!-- <parameter name="browser" value="edge" />-->
        <classes>
            <class name="com.ui.opencart.tests.ProductPageTest" />
        </classes>
    </test>

</suite>